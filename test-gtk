@define-color purple_5 GTK_MAGENTA;
@define-color brown_1 GTK_WHITE;
@define-color brown_2 GTK_WHITE;
@define-color brown_3 GTK_WHITE;
@define-color brown_4 GTK_WHITE;
@define-color brown_5 GTK_WHITE;
@define-color light_1 GTK_WHITE;
@define-color light_2 GTK_WHITE;
